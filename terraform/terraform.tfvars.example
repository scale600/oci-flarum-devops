# OCI 인증 정보 (실제 값으로 교체 필요)
tenancy_ocid     = "ocid1.tenancy.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
user_ocid        = "ocid1.user.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
fingerprint      = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path = "~/.oci/oci_api_key.pem"
region          = "ap-seoul-1"
compartment_id  = "ocid1.compartment.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# SSH 공개키 (실제 공개키로 교체 필요)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... your-ssh-public-key"

# MySQL 데이터베이스 설정
mysql_root_password = "your-secure-mysql-root-password"
mysql_database   = "flarum"
mysql_user       = "flarum"
mysql_password   = "your-secure-mysql-password"

# Flarum 관리자 설정
flarum_admin_email    = "admin@riderwin.com"
flarum_admin_username = "admin"
flarum_admin_password = "your-secure-flarum-admin-password"

# 도메인 설정
domain_name = "community.riderwin.com"

# 프로젝트 설정
project_name = "flarum-community"
environment  = "production"
