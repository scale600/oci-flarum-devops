version: '3.8'

services:
  flarum:
    image: mondedie/flarum:stable
    container_name: flarum
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - flarum_data:/flarum/app/extensions
      - flarum_data:/flarum/app/storage
      - flarum_data:/flarum/app/assets
    environment:
      - UID=1000
      - GID=1000
      - DEBUG=false
      - FORUM_URL=http://{{ ansible_default_ipv4.address }}
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_NAME={{ mysql_database }}
      - DB_USER={{ mysql_user }}
      - DB_PASSWORD={{ mysql_password }}
    depends_on:
      - mysql
    networks:
      - flarum_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3

  mysql:
    image: mysql:8.0
    container_name: flarum_mysql
    restart: unless-stopped
    environment:
      - MYSQL_ROOT_PASSWORD={{ mysql_root_password }}
      - MYSQL_DATABASE={{ mysql_database }}
      - MYSQL_USER={{ mysql_user }}
      - MYSQL_PASSWORD={{ mysql_password }}
    volumes:
      - mysql_data:/var/lib/mysql
      - ./mysql-init:/docker-entrypoint-initdb.d
    networks:
      - flarum_network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 30s
      timeout: 10s
      retries: 3

  nginx:
    image: nginx:alpine
    container_name: flarum_nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
    depends_on:
      - flarum
    networks:
      - flarum_network

volumes:
  flarum_data:
  mysql_data:

networks:
  flarum_network:
    driver: bridge
