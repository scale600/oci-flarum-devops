# Flarum Configuration
FORUM_URL={{ 'https://' + domain_name if domain_name else 'http://' + ansible_default_ipv4.address }}
DEBUG=false

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME={{ mysql_database }}
DB_USER={{ mysql_user }}
DB_PASSWORD={{ mysql_password }}

# MySQL Configuration
MYSQL_ROOT_PASSWORD={{ mysql_root_password }}
MYSQL_DATABASE={{ mysql_database }}
MYSQL_USER={{ mysql_user }}
MYSQL_PASSWORD={{ mysql_password }}

# Flarum Admin Configuration
FLARUM_ADMIN_EMAIL={{ flarum_admin_email }}
FLARUM_ADMIN_USERNAME={{ flarum_admin_username }}
FLARUM_ADMIN_PASSWORD={{ flarum_admin_password }}

# SSL Configuration
{% if domain_name %}
SSL_ENABLED=true
SSL_DOMAIN={{ domain_name }}
{% else %}
SSL_ENABLED=false
{% endif %}

# Docker Configuration
DOCKER_COMPOSE_VERSION={{ docker_compose_version }}

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=30
